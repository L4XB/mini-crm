# Datenbankverbindung
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mini_crm
DB_SSL_MODE=disable

# JWT-Authentifizierung
JWT_SECRET_KEY=dev_secret_key
JWT_REFRESH_SECRET_KEY=dev_refresh_secret_key
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30

# API-Konfiguration
PORT=8081
ENV=development
SERVER_TIMEOUT=60
IDLE_TIMEOUT=120
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,capacitor://localhost,localhost

# Testmodus-Konfiguration für UI-Entwicklung
UI_TEST_MODE=true
UI_TEST_USER=admin@example.com
UI_TEST_PASSWORD=test1234
DISABLE_AUTH_FOR_TESTS=false  # Auf true setzen, um Authentifizierung für Tests zu deaktivieren
SEED_TEST_DATA=true          # Automatisch Testdaten generieren

# Sicherheit
API_KEYS=test_mobile_key,test_web_key
RATELIMIT_REQUESTS=1000
RATELIMIT_DURATION=60

# Logging und Monitoring
LOG_LEVEL=debug
LOG_FORMAT=console
OPEN_METRICS=true            # In Entwicklung Metrics ohne Auth
ENABLE_SWAGGER=true

# Ressourcenlimits
MAX_REQUEST_SIZE=10485760
MAX_BODY_SIZE=5242880

# Frontend-Integration
FRONTEND_URL=http://localhost:3000
MOBILE_APP_SCHEMA=minicrm://
