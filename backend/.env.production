# Datenbankverbindung
DB_HOST=postgres
DB_PORT=5434
DB_USER=postgres
DB_PASSWORD=secure_password_change_me
DB_NAME=mini_crm
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=50
DB_MAX_IDLE_CONNECTIONS=10

# JWT-Authentifizierung
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_REFRESH_SECRET_KEY=different_secure_key_for_refresh_tokens
JWT_EXPIRATION_HOURS=12
REFRESH_TOKEN_EXPIRATION_DAYS=30

# API-Konfiguration
PORT=8081
ENV=production
SERVER_TIMEOUT=60
IDLE_TIMEOUT=120
ALLOWED_ORIGINS=https://crm.yourdomain.com,capacitor://localhost,localhost

# Sicherheit
API_KEYS=key1,key2,mobile_app_key
CSP_DIRECTIVES=default-src 'self'; connect-src 'self' https://api.yourdomain.com; img-src 'self' data:; style-src 'self' 'unsafe-inline';
RATELIMIT_REQUESTS=100
RATELIMIT_DURATION=60

# Logging und Monitoring
LOG_LEVEL=info
LOG_FORMAT=json
LOG_PATH=/var/log/mini-crm
METRICS_USER=prometheus
METRICS_PASSWORD=secure_metrics_password
ENABLE_SWAGGER=false

# Ressourcenlimits
MAX_REQUEST_SIZE=10485760
MAX_BODY_SIZE=5242880

# Frontend-Integration
FRONTEND_URL=https://crm.yourdomain.com
MOBILE_APP_SCHEMA=minicrm://
